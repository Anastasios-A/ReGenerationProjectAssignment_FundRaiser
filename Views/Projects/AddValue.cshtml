@model ReGenerationProjectAssignment_FundRaiser.Models.Project
@{
    Layout = "~/Views/Shared/Main_layout.cshtml";
    var packages = ViewData["Packages"] as List<Funding_Package>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Funding Packages</title>
</head>
<body>

    <h3>@Model.Title</h3>
    <h5>Choose a Funding Package:</h5>

    <div>
        @foreach (var f in packages)
        { 
            <table>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => f.PackageName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => f.PackageValue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => f.PackageReward)
                </td>
                <td>
                    <form asp-action="AddValue">
                            @*<a asp-controller="Projects" asp-action="AddValue" asp-route-id="@Model?.ProjectId">Fund</a>*@
                        @Html.TextBoxFor(m => m.TotalAmount, new { @Value = f.PackageValue,@type="hidden" })
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        <input type="submit" value="Fund" class="btn btn-primary" />
                    </form>
                </td>
            </tr>
            </table>
        }
    </div>

</body>
</html>